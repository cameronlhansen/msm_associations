<div class="page-header">
  <h1>
    Characters
<p>
    <a href="/characters/new" class="btn btn-lg btn-success">New Character</a>
    <p>
      <a href="/movies/new" class="btn btn-lg btn-success">New Movie</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Movie</th>
        <th>Actor</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @characters.each do |character| %>
      <tr>
        <td><% id = character.movie_id %>
        <% movie = Movie.find(id) %>
          <%= movie.title %></td>
        <td><% id_actor = character.actor_id %>
        <% actor = Actor.find(id_actor) %>
          <%= actor.name %></td>
        <td><%= character.name %></td>
        <td>
          <a href="/characters/<%= character.id %>" class="btn btn-primary">Show</a>
          <a href="/characters/<%= character.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_character/<%= character.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
